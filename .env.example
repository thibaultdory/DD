# Application domains
FRONTEND_DOMAIN=dd.ethzero.club
BACKEND_DOMAIN=dd-api.ethzero.club
FRONTEND_URL=https://dd.ethzero.club
BACKEND_URL=https://dd-api.ethzero.club

# Ports (for local development)
FRONTEND_PORT=54287
BACKEND_PORT=56000
DB_PORT=5432

# Database configuration
DB_USER=user
DB_PASSWORD=password
DB_NAME=dd_db
DB_HOST=db
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
SECRET_KEY=your_random_secret_key

# API configuration (used by frontend to connect to backend)
VITE_API_BASE_URL=${BACKEND_URL}/api